<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TrackR.Pages.tripsPage"
             Padding="20">

    <StackLayout>
        <Label Text="Trips List" FontSize="24" Margin="0,0,0,20" />

        <ListView x:Name="TripsListView">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Orientation="Horizontal" Padding="10">
                            <Label Text="{Binding ClientName}" HorizontalOptions="StartAndExpand" />
                            <Label Text="{Binding Date}" HorizontalOptions="End" />
                            <Button Text="Details" Clicked="OnDetailsButtonClicked" />
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>
