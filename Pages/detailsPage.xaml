<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TrackR.Pages.detailsPage"
             Padding="20">

    <StackLayout>
       
        <Label Text="Trip Details" FontSize="24" Margin="0,0,0,20" />

        <Label Text="Client Name:" />
        <Label x:Name="ClientNameLabel" />

        <Label Text="Date:" Margin="0,20,0,0" />
        <Label x:Name="DateLabel" />

        <Label Text="Start Location:" Margin="0,20,0,0" />
        <Label x:Name="StartLocationLabel" />

        <Label Text="Destination:" Margin="0,20,0,0" />
        <Label x:Name="DestinationLabel" />

        <Label Text="Routes:" Margin="0,20,0,0" />
        <Label x:Name="RoutesLabel" />

        <Label Text="Distance to Office:" Margin="0,20,0,0" />
        <Label x:Name="DistanceToOfficeLabel" />

        <Label Text="Distance to Client:" Margin="0,20,0,0" />
        <Label x:Name="DistanceToClientLabel" />

        <Label Text="Distance Difference:" Margin="0,20,0,0" />
        <Label x:Name="DistanceDifferenceLabel" />

        <Label Text="Eligible Allowance:" Margin="0,20,0,0" />
        <Label x:Name="EligibleAllowanceLabel" />

        <Label Text="Reimbursement Value:" Margin="0,20,0,0" />
        <Label x:Name="ReimbursementValueLabel" />
    </StackLayout>
</ContentPage>
