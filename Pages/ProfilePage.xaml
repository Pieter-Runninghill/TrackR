<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TrackR.Pages.ProfilePage"
             Padding="20">

    <StackLayout>
        <Label Text="Username:" />
        <Entry Placeholder="Enter your username" />

        <Label Text="Email:" Margin="0,20,0,0" />
        <Entry Placeholder="Enter your email" />

        <Label Text="Home Location:" Margin="0,20,0,0" />
        <Entry Placeholder="Enter your home location" />

        <Label Text="Work Address:" Margin="0,20,0,0" />
        <Entry Placeholder="Enter your work address" />
    </StackLayout>
</ContentPage>
