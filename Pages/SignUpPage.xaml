<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TrackR.Pages.SignUpPage"
             Title="Sign Up"
             xmlns:viewmodel="clr-namespace:TrackR.ViewModel"
             x:DataType="viewmodel:SignUpViewModel">
    <VerticalStackLayout Spacing="25" Padding="30,0" VerticalOptions="Center">
        <Entry Text="{Binding Email}" Placeholder="Email" Keyboard="Email"/>
        <Entry Text="{Binding Password}" Placeholder="Password" IsPassword="True"/>
        <Entry Text="{Binding Name}" Placeholder="Full Name"/>
        <Button Text="Sign Up" Command="{Binding SignUpCommand}" HorizontalOptions="Center" />
    </VerticalStackLayout>
</ContentPage>